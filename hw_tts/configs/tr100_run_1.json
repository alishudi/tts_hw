{
    "name": "tr100_r1_config",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
          "n_mels": 160
        }
      },
      "log_spec": true
    },
    "arch": {
      "type": "DeepSpeech2",
      "args": {
        "n_feats": 160
      }
    },
    "data": {
      "train": {
        "batch_sampler": {
            "type": "GroupLengthBatchSampler",
            "args": {
                "batch_size": 32,
                "batches_per_group": 20,
                "sort_groups": false
              }
        },
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-100",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      },
      "val": {
        "batch_size": 32,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "dev-clean"
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 1e-3,
        "weight_decay": 0.0005
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "lr_scheduler": {
      "type": "OneCycleLR",
      "args": {
        "steps_per_epoch": 300,
        "epochs": 11,
        "anneal_strategy": "cos",
        "max_lr": 1e-3,
        "pct_start": 0.15
      }
    },
    "trainer": {
      "epochs": 10,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 150,
      "visualize": "wandb",
      "wandb_project": "tts_project",
      "len_epoch": 300,
      "grad_norm_clip": 10
    }
  }