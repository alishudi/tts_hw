{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "arch": {
    "type": "FastSpeech2",
    "args": {
      "model_config": {
        "num_mels": 80,
        "vocab_size": 300,
        "max_seq_len": 3000,
        "encoder_dim": 256,
        "encoder_n_layer": 4,
        "encoder_head": 2,
        "encoder_conv1d_filter_size": 1024,
        "decoder_dim": 256,
        "decoder_n_layer": 4,
        "decoder_head": 2,
        "decoder_conv1d_filter_size": 1024,
        "fft_conv1d_kernel": [9, 1],
        "fft_conv1d_padding": [4, 0],
        "duration_predictor_filter_size": 256,
        "duration_predictor_kernel_size": 3,
        "dropout": 0.1,
        "variance_dropout": 0.5,
        "PAD": 0
      }
    }
  },
  "data": {
    "train": {
      "batch_size": 48,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {}
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 1e-3,
      "betas": [0.9, 0.98],
      "eps": 1e-9
    }
  },
  "loss": {
    "type": "FastSpeechLoss",
    "args": {}
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 200,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "len_epoch": 100,
    "grad_norm_clip": 1,
    "batch_expand_size": 32
  }
}
