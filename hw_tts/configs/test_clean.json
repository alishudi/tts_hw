{
  "name": "test_clean_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 160
      }
    },
    "log_spec": true
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 160
    }
  },
  "data": {
    "train": {
      "batch_sampler": {
          "type": "GroupLengthBatchSampler",
          "args": {
              "batch_size": 32,
              "batches_per_group": 20,
              "sort_groups": false
            }
      },
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 300
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test": {
      "batch_size": 30,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    },
    "test_other": {
      "batch_size": 30,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 4e-8
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "gamma": 0.8,
      "step_size": 600
    }
  },
  "trainer": {
    "epochs": 1,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 150,
    "visualize": "wandb",
    "wandb_project": "tts_project",
    "len_epoch": 1,
    "grad_norm_clip": 10
  }
}